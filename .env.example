# Nosyt WHOP Automation - API Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API (for AI product generation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# WHOP API (for marketplace integration)
# Get your key from: https://dev.whop.com
WHOP_API_KEY=your_whop_api_key_here
WHOP_COMPANY_ID=your_whop_company_id_here

# Optional: Webhook URL for notifications
WEBHOOK_URL=https://your-domain.com/webhook/whop

# System Settings
AUTO_GENERATE=true
AUTO_UPLOAD=true
DEBUG=false

# Advanced Settings (Optional)
MAX_DAILY_PRODUCTS=15
GENERATION_INTERVAL_HOURS=6
UPLOAD_INTERVAL_HOURS=2
PRICE_OPTIMIZATION=true
SEO_OPTIMIZATION=true
